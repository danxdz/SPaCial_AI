{
  "name": "spc-dashboard",
  "private": true,
  "version": "2.0.0",
  "main": "electron/main.cjs",
  "description": "A modern Statistical Process Control (SPC) dashboard for manufacturing quality control",
  "keywords": [
    "spc",
    "statistical-process-control",
    "quality-control",
    "manufacturing",
    "charts",
    "react",
    "typescript"
  ],
  "author": "SPC Dashboard Team",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3001 && electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroicons/react": "^2.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/sql.js": "^1.4.9",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^9.2.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "sql.js": "^1.13.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/pako": "^2.0.4",
    "@types/papaparse": "^5.3.16",
    "@types/raf": "^3.4.3",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/trusted-types": "^2.0.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "wait-on": "^7.2.0"
  }
}
